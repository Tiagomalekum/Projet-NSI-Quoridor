import time       

time_sec = 10
def minuteur(time_sec):
   while time_sec > 0:

      print(time_sec,end=' ')
      # Affiche le minuteur et 
      # retourne au début de la ligne (\r) 
      # pour écraser l'affichage précédent.
      
      time.sleep(1)
      # Cette fonction fait une pause d'une 
      # seconde à chaque itération.
      
      time_sec -= 1
      # Cette ligne enlève 1 au timer après 1 seconde (time.sleep(1)).
    
   print("Temps écoulé !")     
# Indique que le minuteur est écoulé.

minuteur(10)
